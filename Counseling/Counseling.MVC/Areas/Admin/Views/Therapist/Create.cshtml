@model TherapistAddViewModel
<h1 class="text-center display-6">Terapist Ekle</h1>
<section class="section profile">
    <div class="row">
        <div class="col-xl-10 m-auto">
            <div class="card">
                <div class="card-body pt-3">
                    <div class="tab-content pt-2">
                        <div class="profile-edit pt-3" id="profile-edit">

                            <!-- Profile Edit Form -->
                            <form class="form"
                                  asp-area="Admin"
                                  asp-controller="Therapist"
                                  asp-action="Create"
                                  method="post"
                                  enctype="multipart/form-data">
                                <div asp-validation-summary="All"></div>

                                <div class="row mb-3">
                                    <label asp-for="FirstName" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="FirstName" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="LastName" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="LastName" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="UserName" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="UserName" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Gender" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <select asp-for="Gender" asp-items="@Model.GenderList" class="form-select"></select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Password" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Password" type="password" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Description" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Description" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Email" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Email" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="PhoneNumber" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="PhoneNumber" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="DateOfBirth" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        @{
                                            DateTime today = DateTime.Now;
                                            int year = today.Year - 18;
                                            int month = today.Month;
                                            int day = today.Day;
                                            DateTime maximumDate = new DateTime(year, month, day);
                                        }
                                        <input type="date" asp-for="DateOfBirth" class="form-control"
                                               max="@(maximumDate.ToString("yyyy-MM-dd"))"
                                               min="1990-01-01" value=@maximumDate.ToString("yyyy-MM-dd")>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Address" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Address" type="text" class="form-control">
                                    </div>
                                </div>

                                <div class="row mb-3 d-flex justify-content-between align-items-center">
                                    <div class="col-md-8 col-lg-9 p-5">
                                        <img src="~/Admin/img/admin-profile.webp" alt="Profile">
                                        <input type="file" name="ProfilePic" class="btn btn-light btn-sm" />
                                    </div>
                                    <div class="text-center col-md-4 col-lg-3">
                                        <button type="submit" class="btn btn-primary">Kaydet</button>
                                    </div>
                                </div>



                            </form><!-- End Profile Edit Form -->

                        </div>

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>