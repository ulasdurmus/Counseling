@model List<ServiceModel>
<div class="page-header align-items-start min-vh-100" style="background-color: bisque" loading="lazy">
    <span class="mask bg-gradient-dark opacity-6"></span>
    <div class="container my-5">
        <div class="row">
            <div class=" col-12 mx-auto">
                <div class="card z-index-0 fadeIn3 fadeInBottom mt-6">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                            <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">İlanlarım</h4>
                        </div>
                    </div>
                    @if (Model.Count > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Categori Adı</th>
                                    <th>Ücret</th>
                                    <th>Onaylı Mı</th>
                                    <th>İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model)
                                {
                                    <tr>
                                        <td>
                                            @foreach (var serviceCategory in service.ServiceCategories)
                                            {
                                                @serviceCategory.Category.Name
                                            }
                                        </td>
                                        <td>@service.Price</td>
                                        <td>@service.IsApproved</td>
                                        <td>
                                            <button class="btn btn-danger">Sil </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @*@foreach (var service in Model)
                    {
                    <div class="card-body">
                    <div class="row">
                    <div class="col-md-8">
                    <div class="row">
                    <div class="col-md-6">
                    <div class=" my-3">
                    <h4>Fiyat: @service.Price</h4>
                    </div>
                    </div>
                    </div>
                    </div>
                    </div>
                    </div>
                    }*@
                    }
                    else
                    {
                        <h4>Hiç ilanınız bulunmamktadır.</h4>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

