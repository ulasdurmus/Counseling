@model List<ServiceModel>
<div class="page-header align-items-start min-vh-100 bg-dark"  loading="lazy">
    <span class="mask bg-gradient-dark opacity-6"></span>
    <div class="container-fluid p-3 m-5 ">
        <div class="row">
            <div class="col-12 mx-auto">
                <div class="card z-index-0 fadeIn3 fadeInBottom mt-6">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                            <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">İlanlarım</h4>
                        </div>
                    </div>
                    <div class="row m-3 ">
                        <div class="col-2">
                            <a 
                                asp-area=""
                                asp-controller="Service"
                                asp-action="Create"
                                class="btn btn-success">İlan Ekle</a>
                        </div>

                    </div>
                    @if (Model.Count > 0)
                    {
                        <table class="table-responsive table">
                            <thead>
                                <tr>
                                    <th>Categori Adı</th>
                                    <th>Ücret</th>
                                    <th>Onaylı Mı</th>
                                    <th style="width:200px">İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model)
                                {
                                    <tr>
                                        <td>
                                            @foreach (var serviceCategory in service.Categories)
                                            {
                                                @serviceCategory.Name
                                            }
                                        </td>
                                        <td>@service.Price</td>
                                        <td>@service.IsApproved</td>
                                        <td>
                                            <a asp-area=""
                                       asp-controller="Service"
                                       asp-action="Delete"
                                       asp-route-id="@service.ServiceId"
                                               class="btn btn-danger">
                                                <span class="material-icons">
                                                    close
                                                </span>
                                            </a>
                                            <a asp-area=""
                                       asp-controller="Service"
                                       asp-action="Edit"
                                       asp-route-id="@service.ServiceId"
                                               class="btn btn-warning ">
                                                <span class="material-icons">
                                                    edit
                                                </span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    }
                    else
                    {
                        <h4 class="text-danger text-center alert">Hiç ilanınız bulunmamaktadır.</h4>
                    }

                </div>
            </div>
        </div>
    </div>
</div>




